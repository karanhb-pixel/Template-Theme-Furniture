# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{json,js,ts,css,scss,sass,less}]
indent_size = 2

[*.{php,html,htm}]
indent_size = 4

# WordPress specific
[wp-config.php]
indent_size = 4

# Package.json and similar
[package*.json]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Lockfiles
[*.lock]
insert_final_newline = false